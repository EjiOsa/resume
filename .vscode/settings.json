{
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "editor.formatOnSave": false,
  "textlint.run": "onSave",
  "files.associations": {
    "*.md": "markdown"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": ".*\\.(md|txt|json)$",
        "cmd": "yarn fix"
      }
    ]
  }
}
